            </div>
        </div>
        <section class="catalog__items">
            <div class="catalog__items-wrapper container" itemprop = "hasOfferCatalog" itemscope itemtype = "http://schema.org/OfferCatalog">
                {% set folder = 'shoes' %}
                {% set category = 'Кроссовки' %}
                {% set items = [
                    { srcset: '01', price: '92 000', name: 'Maison Margiela Fusion Low Sneakers', href: 'item01.html'},
