                {% for item in items %} 
                    {% include 'blocks/catalog-item.twig' with items %}
                {% endfor %} 
                 
            </div>
        </section>
        <div class="catalog__pagination pagination">
            {% set pages = 12 %} {% set current = 1 %}
            {% include 'blocks/pagination.twig' %}
        </div>
    
    </main>
    <footer class="footer footer--catalog">
        {% include 'blocks/footer.twig' %}
    <footer class="footer">



    <script src="js/api.js"></script>
    <script src="js/lib/jquery-3.4.1.min.js"></script>
